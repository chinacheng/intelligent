=stylesheet_link_tag 'session'

-if flash[:error]
  =flash[:error]
.blank_area
.login_main
  =form_tag admin_start_super_create_path,:method=>"post" do
    .email
      %span{:class=>'sign_label'}
        =I18n.t("view.login.email") 
      =text_field_tag "email"
    .password
      %span{:class=>'sign_label'}
        =I18n.t("view.login.password")
      =password_field_tag "password"
    .captcha
      = show_simple_captcha
    .submit
      =submit_tag I18n.t("view.login.login")

